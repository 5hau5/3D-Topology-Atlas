{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Topology Lesson",
  "type": "object",
  "required": ["meta", "steps"],
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "version": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["title"]
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "asset": {
            "type": ["object", "null"],
              "properties": {
                "name":{ "type": "string" },
                "file_data":{ "type": "string" },
                "type":{ "type": "string", "enum": ["glb"]}
              },
              "required": ["name", "file_data"]
            }
          }
        }
      }
    }
}

